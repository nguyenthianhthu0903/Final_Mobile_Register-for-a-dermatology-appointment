<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="145dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rec_white_border_black_2">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="40dp"
            android:layout_marginTop="15dp">
            <ImageView
                android:id="@+id/iv_avt"
                android:layout_height="@dimen/_70pxh"
                android:layout_width="@dimen/_70pxh"
                android:scaleType="centerCrop"
                android:src="@drawable/img_patient"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:text="Name"
            android:textColor="@color/black"
            android:fontFamily="@font/frauncesregular"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="100dp"
            android:text="Phone"
            android:fontFamily="@font/frauncesregular"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="100dp"
            android:text="Time"
            android:textColor="@color/black"
            android:fontFamily="@font/frauncesregular"
            android:textSize="15dp"/>

        <FrameLayout
            android:id="@+id/frame_btn_decline"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="start"
            android:layout_marginLeft="40dp"
            android:background="@drawable/rec_white_border_red">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DECLINE"
                android:fontFamily="@font/frauncesregular"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_btn_accept"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="end"
            android:layout_marginRight="40dp"
            android:background="@drawable/rec_white_border_green">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACCEPT"
                android:fontFamily="@font/frauncesregular"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal|center_vertical"/>
        </FrameLayout>
    </FrameLayout>

</RelativeLayout>